package com.bridgelabz.junitprograms;

import java.util.Scanner;

import com.bridgelabz.basicprograms.powerOfTwo;

public class ToBinary {
    static int[] swaparr = new int[8];
	static int[] toBinary(int num) {
		String str = "";
		while(num != 0) {
			str = num % 2 + str ;
			num = num / 2;
		}
		while(str.length() % 4 != 0) {
			str = 0 + str ;
		}
		return stringTointArray(str);
	}

	private static int[] stringTointArray(String str) {
		int[] binary = new int[str.length()];
		for(int i = 0 ; i < str.length() ; i++ ) {
			binary[i] = str.charAt(i) - 48;
		}
		return binary;
	}

	private static int[] swapNibbels(int[] swaparr) {
		int temp , j = swaparr.length - 4;
		for(int i=0;i < 4 ;i++) {
			temp = swaparr[i];
			swaparr[i] = swaparr[j];
			swaparr[j] = temp ;
			j++;
		}
		return swaparr;
	}
    static void printArray(int[] binary) {
    	for(int i = 0 ; i < binary.length ; i++) {
    		System.out.print(binary[i]);
    	}
    	System.out.println();
	}
    private static int toDecimal(int[] binary) {
    	
    	int dec = 0;
    	int j=0;
    	for(int i=binary.length-1 ; i >= 0 ; i--) {
    		if(binary[i] == 1) {
    			dec = dec + (int) Math.pow(2, j);
    			}
    		j++;
    	}
		return dec;
	}
    static boolean powerOfTwo(int d){
    	int i = 0;
    	int temp = (int) Math.pow(2, i);
    	
    	while(temp < d) {
    		if(temp == d) {
    			return true;
    		}
    		i++;
    	}
		return false;
    	
    }
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("enter the number :");
		int num = sc.nextInt();
		int[] binary = toBinary(num);
		System.out.println("binary is :");
		printArray(binary);
		swapNibbels(binary);
		printArray(binary);
		int d = toDecimal(binary);
		System.out.println(d);
		if(powerOfTwo(d)) {
			System.out.println("it is power of two ");
		}else {
			System.out.println("it is not power of two ");
		}
	}
}
