package com.bridgelabz.junitprograms;

import java.util.Scanner;

public class VendingMachine {
	
	static int TOTAL,I;
	static int[] NOTES  = {1000,500,100,50,10,5,2,1};
	private static int noOfNotes;
	static void notes(int value,int prodvalue) {
		int sum = 0;
		int[] arr;
		if(value >= prodvalue) {
			TOTAL = value - prodvalue;
			if(TOTAL == 0) {
				System.out.println("returning amount : "+TOTAL+" THANK YOU!");
			}
			if (TOTAL / NOTES[I] != 0) {
				noOfNotes += (value / NOTES[I]);
				System.out.println(NOTES[I] + "Rs notes :" + value / NOTES[I]);
				TOTAL = TOTAL % NOTES[I];
			}
			I++;
			if (TOTAL == 0) {
				System.out.println("total notes :" + TOTAL);
				return;
			}
		 else {
			System.out.println("insufficient amount! try again..");
		}
		}
		notes(value, prodvalue);
		
	}
	public static void main(String[] args) {
		try {
			Scanner sc =  new Scanner(System.in);
			System.out.println("enter the value of amount :");
			int value = sc.nextInt();
			System.out.println("enter the product amount which you want to buy :");
			int prodvalue = sc.nextInt();
			notes(value,prodvalue);
		} catch (Exception e) {
			System.out.println("enter the amount in integer");
		}
		
	}

}
